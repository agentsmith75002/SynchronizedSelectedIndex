                        <Core:DataTriggerBehavior Binding="{Binding IsSelected, ElementName=btn_4}" Value="True">
                            <Core:ChangePropertyAction PropertyName="Visibility" Value="Collapsed" TargetObject="{Binding ElementName=_05_2__}"/>
